 </header>
    <body>
        <main>
                <section id="details-page">
                    <form action="/books/<%=book._id%>?_method=PUT" method="POST">
                    <h2>Books</h2>
                    <div>Title:</div>
                    <div><%= book.title %> </div>
                    <input name="title" value=title>
                    <br>
                    <div>Author:</div>
                    <div><%= book.author %> </div>
                    <input name="author" value=author>
                    <br>
                    <div>Genre:</div>
